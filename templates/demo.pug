doctype html
html
  head
    meta(charset='UTF-8')

    != '<style>'
    :stylus
      body
        font-family "Open Sans", sans-serif
        margin 60px
        color #555

      .icon
        border solid 1px #eee
        margin 3px
        padding 10px
        display inline-block
        width 100px
        text-align center
        div
          font-size 10px

    != '</style>'

    | <link rel="stylesheet" href="css/#{font.fontname}-base.css">
    | <link rel="stylesheet" href="css/#{font.fontname}-codes.css">

  body
    .container
      - var data = JSON.stringify(font, null, 2)
      pre #{data}
      header
        h1 #{font.fullname.toUpperCase()}

      - var i, g, css_class, code
      - function pad(s) { return s.length === 3 ? '0' + s : s; }
      - for (i in glyphs)
        - g = glyphs[i]
        - if( g.duo ) continue

        - css_class = meta.css_use_suffix ? g.css + meta.css_prefix_text : meta.css_prefix_text + g.css
        - code = pad(g.code.toString(16))
        .icon
          i(class=font.fullname class=css_class)
          .css_name #{css_class}
          .char_code 0x#{code}